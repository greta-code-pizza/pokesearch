{
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es6",
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": true
  }
}